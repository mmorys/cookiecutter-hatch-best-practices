[flake8]
select = B,B9,C,D,DAR,E,F,N,RST,S,W,I252
ignore = E203,E501,RST201,RST203,RST301,W503
max-line-length = 120
max-complexity = 10
docstring-convention = google
ban-relative-imports = true
per-file-ignores =
    # tests can use relative imports
    tests/*: I252,I101
    tests/**/*: I252,I101
